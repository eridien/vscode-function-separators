{
  "name": "vscode-function-separators",
  "displayName": "Function Separators",
  "description": "Add simple comment line separators above each function to make them stand out.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-function-separators.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -p . -w",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "lint:watch": "eslint . --ext .ts,.tsx,.js --cache --cache-location node_modules/.cache/eslint --max-warnings=0 --watch",
    "watch:both": "concurrently -k -n TSC,ESLINT -c auto \"npm:watch\" \"npm:lint:watch\""
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "typescript": "^5.9.2"
  }
}
