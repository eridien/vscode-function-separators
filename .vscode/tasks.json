{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsc: watch",
      "type": "npm",
      "script": "watch",
      "group": "build",
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "options": { "cwd": "${workspaceFolder}" }
    },
    {
      "label": "eslint: watch",
      "type": "npm",
      "script": "lint:watch",
      "isBackground": true,
      "problemMatcher": "$eslint-stylish",
      "options": { "cwd": "${workspaceFolder}" }
    },
    {
      "label": "watch: both",
      "dependsOn": ["tsc: watch", "eslint: watch"],
      "dependsOrder": "parallel"
    }
  ]
}
